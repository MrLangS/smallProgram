.register_bg{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 400rpx;
  background-color: #eb4613;
}
.phone_tip{
  position: absolute;
  right: 16%;
  color: red;
  font-size: 20rpx;
  margin-top: 65rpx;
}
.phone_check{
  position: absolute;
  right: 16%;
  margin-top: 35rpx;
}
.click-class{
  background: white !important;
  color: #eb4613;
}
.orange_bcg{
  background: #eb4613;
}
.orangeBtn{
  background: #eb4613;
  color: white;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 90rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}
.animal{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  left: 30rpx;
  margin-top: 100rpx;
}
.session{
  position: fixed;
  width: 200rpx;
  height: 100rpx;
  left: 110rpx;
  margin-top: 40rpx;
}
.progress{
  position: fixed;
  top: 290rpx;
  width: 80%;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo_bg {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 400rpx;
  background-color: #3281ff;
}

.green_bcg{
  background-color: #36c8c3;
}

.blue_bcg{
  background-color: #2d8cf0;
}

.green{
  color: #36c8c3;
}
.blue{
  color: #3281ff;
}

.logo {
    width: 200rpx;
    height: 166rpx;
    margin-top: 100rpx;
  }

.login_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 85%;
  border-radius: 10px;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.05);
  background-color: #ffffff;
  margin-top: -100rpx;
}

.switch_view {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  margin-top: 30rpx;
  height: 80rpx;
  width: 85%;
}
.switch_view .normal_title {
    color: #333333;
    font-size: 34rpx;
  }

.selected_title {
  color: #2d8cf0;
  font-size: 36rpx;
}

.stf_selected_title {
  color: #36c8c3;
  font-size: 36rpx;
}

.input_view {
  display: flex;
  margin-top: 10rpx;
  flex-direction: column;
  width: 80%;
  
}

.input_view  .input_bar {
  height: 90rpx;
  line-height: 90rpx;
  flex: 2;
   z-index:1;
}

.headlabel{
  height: 90rpx;
  line-height: 90rpx;
  flex: 1
}

.label_input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  border-bottom: 1rpx solid #efefef;
  padding: 20rpx 0;
}

.login_button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  width: 60%;
  height: 88rpx;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 34rpx;
}

.info_view {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 85%;
}

.info_text {
  color: #7f7f7f;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.token_address {
  margin-top: 20rpx;
  color: #2d8cf0;
  font-size: 30rpx;
}

.register_button{
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  width: 300rpx;
  height: 88rpx;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 34rpx;
  background: #eb4613;
}
.click-class{
  background: white !important;
  color: #eb4613;
}

.codeBtn{
  position: fixed;
  color: #bbb;
  padding: 0;
  margin-top: 10rpx;
  width: 20%;
  border-radius: 20rpx;
  z-index:2;
  right: 100rpx;
  font-size: 25rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.blueBtn{
  background: #3281ff;
  color: white;
}
.greenBtn{
  background: #36c8c3;
  color: white;
}

.codeBtn::after {
  border: none;
}
