<view class="swiper-tab">    
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">邀请记录</view>    
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">拜访记录</view>    
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">通行记录</view>
</view> 
<swiper current="{{currentTab}}" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <!-- 邀请记录 -->    
  <swiper-item>      
  <!-- 新样式 -->
  <view wx:for="{{inviteList}}" wx:key="id" data-index="{{index}}" bindtap='clickInvite'>
    <view class='item'>
      <view class='item-head'>
        <view class=''>{{item.year}}</view>
        <view class='item-bot'>{{item.month}}-{{item.day}}</view>
      </view>
      <view class='' hover-class='click'>
        <view class='item-top'>{{item.reason}}</view>
        <view class='item-bottom'>
          <text space='nbsp'>{{item.visitorLinkmanName}}      {{item.visitorLinkmanPhone}}      约定人数:{{item.visitorCount}}</text>
        </view>
      </view>
    </view>
  </view>  
  </swiper-item>   
  <!-- 拜访记录 -->    
  <swiper-item>      
  <!-- <view wx:for="{{visitList}}" wx:key="id" data-index="{{index}}" bindtap='clickVisit'>
    <view class='item' hover-class='click'>
      <view class='item-icon'><icon class='icon' type="{{item.status==2? 'success':(item.status==1?'info':'cancel')}}" size='18' /></view>
      <view class='item-head'>{{item.reason}}</view>
      <view class='item-foot'>{{item.invitationManName}}</view>
    </view>
  </view> -->

  <!-- 新样式 -->
  <view wx:for="{{visitList}}" wx:key="id" data-index="{{index}}" bindtap='clickVisit'>
    <view class='item'>
      <view class='item-head'>
        <view class=''>{{item.year}}</view>
        <view class='item-bot'>{{item.month}}-{{item.day}}</view>
      </view>
      <view class='item-icon'>
        <icon class='icon' type="{{item.status==2? 'success':(item.status==1?'info':'cancel')}}" size='18' />
      </view>
      <view class='' hover-class='click'>
        <view class='item-top'>{{item.reason}}</view>
        <view class='item-bottom'>
          <text space='nbsp'>{{item.invitationManName}}      {{item.invitationManAddress}}</text>
        </view>
      </view>
    </view>
  </view>
  </swiper-item>    
  <!-- 通行记录 -->    
  <swiper-item>      
  <view>一条通行记录</view>    
  </swiper-item>
</swiper>