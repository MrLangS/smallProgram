.swiper-tab{	
  /* position: fixed;
  top: 0;
  left: 0; */
  width: 100%;	
  border-bottom: 
  2rpx solid #777777;	
  text-align: center;	
  line-height: 80rpx;
  background-color: #888888;
}
/* .abs{
  position: relative;
  margin-top: 90rpx;
} */
.swiper-tab-list{  
  font-size: 30rpx;    
  display: inline-block;
  width: 50%;	
  color: #fff;
  opacity: 0.3;
}
.swiper-tab-li{  
  font-size: 30rpx;    
  display: inline-block;
  width: 100%;	
  color: #ffffff;
}
.tip{
  /* height: 300rpx; */
  line-height: 600rpx;
  width: 100%;
  text-align: center;
}
.on{ 
  background-color: #2f353b;
  color: #ffffff;	
  border-bottom: 5rpx solid #da2b0c;
  opacity: 1;
} 
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  background-color: #77777723;
  overflow: hidden; 
}
.swiper-box view{	
  text-align: center;
}

.click{
  background-color: #7777770c;
}

.item{
  display: flex;
  flex-direction: row;
  /* position: relative; */
  width: 100%;
  line-height: 60rpx;
  background-color: white;
  height: 120rpx;
  /* margin-top: 4rpx; */
  border-bottom: 1rpx solid #eeeeee;
}
.item-head{
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  align-self: center;
  /* border-right: 1rpx solid #b2b2b2; */
  background-color: #eeeeee;
  opacity: 0.6
}
.item-top{
  margin-left: 40rpx;
}
.item-bot{
  opacity: 0.6;
  font-size: 25rpx;
}
.item-bottom{
  margin-left: 40rpx;
  opacity: 0.6;
  font-size: 30rpx;
}
.item-icon{
  position: absolute;
  line-height: 120rpx;
  right: 30rpx;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
