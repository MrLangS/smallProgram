.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box-shadow-index{
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) ;
}
.active {
  box-shadow: 0 0px 8px 0 rgba(0, 0, 0, 0), 0 6px 20px 0 rgba(0, 0, 0, 0);
  transform: translateY(4px);
}
.up{
  z-index: 34;
}
.up image{
  width: 130rpx;
  height: 120rpx;
}
.bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
.opa{
  margin-top: 10rpx;
  opacity: 0.9;
}
.txt{
  position: relative;
}
.head{
  min-height: 100vh;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: ; */
}
.head-txt{
  /* margin-top: 10rpx; */
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  opacity: 0.5;
}
.txt-content{
  right: 0;
}
