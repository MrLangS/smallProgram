<!--start.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/more/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="/images/more/title8.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src='{{company.clientLogoURL?company.clientLogoURL:"/images/cmpany.png"}}'></image>
        <image class="wave" src="/images/more/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/more/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <!-- 信息部分 -->
        <view class='wrapper'>
          <view class='box-shadow pro}}'>
            <view class='list'>
                <view class='info'>
                    <view class='infotitle'>{{user.company || '未知单位'}}</view>
                </view>
            </view>
          </view>

          <view class='profile {{isTouchMove ? "touch-move-active" : ""}}'data-index='1'>
            <view class='profileitem'>
              <view class='info'>
                <image class='avatar' bindtap='chooseImg' src='{{user.photoURL?user.photoURL:"/images/user_background.png"}}'></image>
                <view class='username'>{{user.username || '未知'}}</view>
              </view>
              
            </view>

          </view>

          <view class='box-shadow items'>
            
            <view class='item'>
              <view class='infotitle'>
                <view>手机号</view>
              </view>
              <view class='count'>{{ user.phonenum|| '未知'}}</view>
            </view>
          </view>

          <view class='box-shadow items'>
            <!-- bindtap='jump2visit' -->
            <view class='item' bindtap='gotoSet' hover-class='hover-class'>
              <view class='left-row'>
                <view>
                  <image  mode='aspectFit' src='{{"/images/setting.png" }}' />
                </view>
                <view>设置</view>
              </view>
              <view style='width:20rpx'><image  mode='aspectFit' class='more-icon' src='{{"/images/profile_arrow.png" }}' /></view>
              
            </view>
          </view>

        </view>
        
        <text class="copyright">FaceOS</text>
      </view>
    </view>
  </block>
</view>

