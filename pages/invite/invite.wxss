@import "../comm/weui.wxss";
page{
  height: 100%;
  width: 100%;
}
.tip{
  line-height: 600rpx;
  width: 100%;
  text-align: center;
}
.none{
  text-align: center;
}
.picker{
  background-color: #FFFFFF;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 50rpx;
  opacity: 0.8;
}
.pickerr{
  background-color: #FFFFFF;
  display: flex;
  line-height: 100rpx;
  margin-left: 20rpx;
  opacity: 0.8;
}
.checkbox{
  display: flex;
  flex-direction: row;
}
.middle{
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  opacity: 0.5;
}
.top{
  display: flex;
  flex-direction: column;
}
.changeInfo{
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
}

.area {
  background-color: #fff;
  text-align: left;
}

.input-log{
  display: flex;
  border-bottom: 1px solid #ddd;
  flex-direction: row;
  height: 100rpx;
  /* margin-bottom: 20rpx; */
}
.lab{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  opacity: 0.5;
}
.content{
  display: flex;
  width: 500rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 50rpx;
  opacity: 0.8;
}
.head-title{
  width: 150rpx;
  opacity: 0.5;
  font-size: 30rpx;
}
.head-con{
  margin-left: 20rpx;
}
.head-content{
  margin-top: 20rpx;
  font-size: 30rpx;
  display: flex;
}
.reason-title{
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  opacity: 0.5;
  margin-top: 30rpx;
}
.reason{
  width: 100%;

}
.reason-content{
  width: 70%;
  margin: auto;
  text-align: center;
  margin-bottom: 40rpx;
}


.area-content{
  font-size: 35rpx;
  display: flex;
  width: 400rpx;
  height: 200rpx;
  margin-left: 50rpx;
