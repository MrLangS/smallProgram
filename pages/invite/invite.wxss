  margin-bottom: 30rpx;
  opacity: 0.8;
}
.btn{
  margin-top: 50rpx;
  margin-bottom: 40rpx;
}
.btn01{
  display: flex;
  margin-top: 50rpx;
  /* margin-bottom: 40rpx; */
}
.holder{
  font-size: 30rpx;
}
.footer{
  text-align: center;
  font-size: 25rpx;
}
.footer-r{
  width: 100%;
  text-align: right;
  font-size: 25rpx;
  opacity: 0.6;
  margin-bottom: 20rpx;
}
.backBtn{
  margin-left: 0rpx;
  width: 30%;
  height: 90rpx;
  text-align: center;
}
.postBtn{
  margin-right: 0rpx;
  width: 30%;
  height: 90rpx;
}
.shareBtn{
